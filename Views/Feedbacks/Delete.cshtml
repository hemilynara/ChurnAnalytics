@model ChurnAnalitycs.Models.Feedback

@{
    ViewData["Title"] = "Excluir";
}

<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        font-family: 'Roboto', sans-serif;
        color: #495057;
    }

    .container {
        margin-top: 50px;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .row {
        margin-bottom: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        margin-bottom: 10px;
    }
</style>

<div class="container">
    <h1>Excluir</h1>

    <h3>Você tem certeza que deseja excluir esse registro?</h3>
    <div>
        <h4>Feedback</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataFeedback)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataFeedback)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IndicadorDesempenho)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IndicadorDesempenho)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ValorIndicador)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ValorIndicador)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoInteracao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoInteracao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NomeCanalComunicacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeCanalComunicacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataAtendimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataAtendimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoAtendimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoAtendimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ResolucaoProblema)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ResolucaoProblema)
            </dd>
        </dl>
        <br />


        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar a Lista</a>
        </form>
    </div>
</div>